{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-redeclare": "off", // no-redeclare is a pain with all the switch statements tbh
        "semi": "error",
        "eqeqeq": "warn",
        "func-names": "warn",
        "no-console": "off",
        "no-invalid-this": "error",
        "semi-style": "error",
        "semi-spacing": "error",
        "no-useless-escape": "off"
    }
}
